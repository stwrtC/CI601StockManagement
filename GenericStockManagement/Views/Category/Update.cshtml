@using GenericStockManagement.ViewModels
@model CategoryListViewModel


<h2>Update Products</h2>

<form asp-action="ConfirmUpdate" method="post">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Category Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model._categories.Count(); i++)
            {
                var category = Model._categories.ElementAt(i);
                <tr>
                    <td>
                        <input type="hidden" name="updatedCategories[@i].Id" value="@category.Id" />
                        @category.Id
                    </td>
                    <td>
                        <input class="form-control" name="updatedCategories[@i].Name" value="@category.Name" />
                    </td>
                    <td>
                        <input class="form-control" name="updatedCategories[@i].Description" value="@category.Description" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
